@model IEnumerable<fun_com.Models.Produto>

@{
    ViewBag.Title = "Produtos";
}

<div class="d-flex justify-content-between pb-3">
    <h2>Produtos</h2>

    <a class="nav-link text-light float-right" asp-area="" asp-controller="Produto" asp-action="Create">
        <button type="button" class="btn btn-secondary">Novo</button>
    </a>
</div>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Local)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                Ação
            </th>
        </tr>
    </thead>

@foreach (var item in Model) {
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Local)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.ActionLink("Excluir", "delete", new { Id = item.Id }) |
                @Html.ActionLink("Editar", "update", new { Id = item.Id })
            </td>
        </tr>
    </tbody>
}

</table>
